{
    "name": "@mnabaci/react-native-picker-select",
    "version": "9.0.0",
    "description": "A Picker component for React Native which emulates the native <select> interfaces for each platform",
    "license": "MIT",
    "author": "Mehmet Abaci <mnabaci@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/mnabaci/react-native-picker-select.git"
    },
    "main": "src/index.js",
    "keywords": [
        "dropdown",
        "picker",
        "select",
        "react",
        "react-native",
        "react native",
        "expo",
        "items"
    ],
    "files": [
        "index.d.ts",
        "/src"
    ],
    "dependencies": {
        "@react-native-picker/picker": "^2.4.7",
        "lodash.isequal": "^4.5.0"
    },
    "devDependencies": {
        "@types/react-native": "^0.70.2",
        "babel-jest": "^23.6.0",
        "babel-preset-react-native": "^4.0.1",
        "eslint-config-react-app": "7.0.1",
        "husky": "^2.4.0",
        "jest": "^23.6.0",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "prop-types": "^15.7.2",
        "react": "18.1.0",
        "react-dom": "18.1.0",
        "react-native": "0.70.2",
        "react-test-renderer": "18.1.0"
    },
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "open:coverage": "open ./coverage/lcov-report/index.html",
        "prettier:debug-check": "prettier --config ./.prettierrc.js --debug-check \"{src,test}/**/*.js\"",
        "preprettier:all": "yarn run prettier:debug-check",
        "prettier:all": "prettier --config ./.prettierrc.js --write \"{src,test}/**/*.js\"",
        "lint": "echo \"---Running ESLint---\" && eslint \"src/**/*.{js,jsx}\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "pre-push": "echo \"---Running ESLint---\" && yarn lint && yarn test"
        }
    },
    "jest": {
        "preset": "react-native",
        "setupFiles": [
            "./test/setup.js"
        ],
        "transformIgnorePatterns": [
            "node_modules/?!(@react-native-picker/picker)"
        ]
    }
}
